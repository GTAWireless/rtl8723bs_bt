#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

include /usr/share/dpkg/buildflags.mk

DEB_BUILD_GNU_TYPE := $(shell dpkg-architecture -qDEB_BUILD_GNU_TYPE)
DEB_HOST_GNU_TYPE  := $(shell dpkg-architecture -qDEB_HOST_GNU_TYPE)
ifneq ($(DEB_HOST_GNU_TYPE),$(DEB_BUILD_GNU_TYPE))
	CC=$(DEB_HOST_GNU_TYPE)-gcc
endif

export CC

PACKAGE = rtl8723bs-bt

%:
	dh $@ --with-systemd

override_dh_auto_build:
	$(MAKE) CC=$(CC) PREFIX=$(PWD)/debian/$(PACKAGE)

override_dh_auto_install:
	$(MAKE) CC=$(CC) PREFIX=$(PWD)/debian/$(PACKAGE) install
	dh_systemd_enable --name=bt_rtk_hciattach
	dh_systemd_start
	dh_link lib/systemd/system/bt_rtk_hciattach.service etc/systemd/system/bluetooth.target.wants/bt_rtk_hciattach.service
